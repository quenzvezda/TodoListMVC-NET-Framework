@model IEnumerable<DotNet_Framework_WebApp.Models.TodoItem>

<!DOCTYPE html>
<html>
<head>
    <title>Todo List</title>
</head>
<body>
<div class="container mt-4">
    <h1 class="text-center mb-4">Todo List</h1>

    <!-- Button untuk Add Todo -->
    <div class="text-end mb-3">
        <a href="/Todo/PreAdd" class="btn btn-success">New Todo</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Is Complete</th>
            <th>Created Date</th>
            <th>Updated Date</th>
            <th>Finish Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@(item.IsComplete ? "Yes" : "No")</td>
                <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(item.UpdatedDate.HasValue ? item.UpdatedDate.Value.ToString("yyyy-MM-dd HH:mm") : "-")</td>
                <td>@(item.FinishDate.HasValue ? item.FinishDate.Value.ToString("yyyy-MM-dd HH:mm") : "-")</td>
                <td>
                    <div class="btn-group" role="group">
                        @if (!item.IsComplete)
                        {
                            <a href="/Todo/PreEdit/@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        }
                        <a href="/Todo/Delete/@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>
