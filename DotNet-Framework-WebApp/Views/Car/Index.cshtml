@model System.Data.DataTable

<div class="container mt-4">
    <h2 class="text-center mb-4">Car List</h2>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Brand</th>
            <th>Color</th>
            <th>Created Date</th>
            <th>Tire Count</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (System.Data.DataRow row in Model.Rows)
        {
            <tr>
                <td>@row["Id"]</td>
                <td>@row["Brand"]</td>
                <td>@row["Color"]</td>
                <td>@row["CreatedDate"]</td>
                <td>@row["TireCount"]</td>
                <td>
                    <a href="/Car/Details/@row["Id"]" class="btn btn-sm btn-primary">Details</a>
                    <a href="/Car/Edit/@row["Id"]" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/Car/Delete/@row["Id"]" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="text-center mt-3">
        <a href="/Car/Create" class="btn btn-success">Add New Car</a>
    </div>
</div>
