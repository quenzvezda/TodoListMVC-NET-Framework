@model IEnumerable<DotNet_Framework_WebApp.ViewModels.CarWithTireCount>

<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>Brand</th>
        <th>Color</th>
        <th>Tire Count</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var car in Model)
    {
        <tr>
            <td>@car.Id</td>
            <td>@car.Brand</td>
            <td>@car.Color</td>
            <td>@car.TireCount</td> <!-- Tampilkan jumlah Tires -->
            <td>
                <a href="/Car/Details/@car.Id">Details</a> |
                <a href="/Car/Edit/@car.Id">Edit</a> |
                <a href="/Car/Delete/@car.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a href="/Car/Create">Add New Car</a>